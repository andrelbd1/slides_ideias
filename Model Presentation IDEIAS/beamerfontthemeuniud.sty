\defaultfontfeatures[Rubik]
{
Extension = .ttf ,
UprightFont = Rubik-Light,
BoldFont = Rubik-Regular ,
ItalicFont = Rubik-LightItalic ,
BoldItalicFont = Rubik-Italic
}

\defaultfontfeatures[Roboto]
{
Extension = .ttf ,
UprightFont = Roboto-Light,
BoldFont = Roboto-Bold ,
ItalicFont = Roboto-LightItalic ,
BoldItalicFont = Roboto-BoldItalic
}

\usefonttheme{serif}
\setmainfont{Roboto}

% \tiny \scriptsize \footnotesize \small \normalsize \large \Large \LARGE \huge

% Font sizes
\setbeamerfont{title}{size=\Large,family=\fontspec{Rubik-Light.ttf}}
\setbeamerfont{frametitle}{size=\Large,family=\fontspec{Rubik-Light.ttf}}
\setbeamerfont{framesubtitle}{size=\normalsize,family=\fontspec{Rubik-Light.ttf}}
\setbeamerfont{title in head/foot}{size=\footnotesize}
\setbeamerfont{author in head/foot}{size=\footnotesize}

\setbeamerfont*{bibliography entry author}{series=\bfseries}
\setbeamerfont*{bibliography entry title}{series=\bfseries}
\setbeamerfont*{description item}{series=\bfseries}